<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_margin="@dimen/recycler_horizontal_margin"/>

    <pro.vteam.freemarket.CostumeTextView
        android:id="@+id/linkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toEndOf="@id/linkIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="عنوان عنوان"/>

    <View
        android:id="@+id/linkDivider"
        android:layout_width="match_parent"
        android:layout_height="0.002dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorAccent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>