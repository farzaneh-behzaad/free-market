<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="96dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_android_black_24dp"
        app:layout_constraintDimensionRatio="h,3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="96dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tag_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/itemIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="4dp"
        app:elevation="0dp"
        app:cardBackgroundColor="@color/tagRed"
        >

        <pro.vteam.freemarket.CostumeTextView
            android:id="@+id/txt_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="رایگان"
            android:textColor="@color/white"
            android:textSize="@dimen/one_row_items_tag_text_size"

            />
    </com.google.android.material.card.MaterialCardView>

    <pro.vteam.freemarket.CostumeTextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/line_space_extra"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/app_name_"
        android:textColor="@color/textColor"
        android:textSize="@dimen/one_row_items_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemIcon"

        />

    <pro.vteam.freemarket.CostumeTextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_space_extra"
        android:text="کارگردان"
        android:textColor="@color/lightGray"
        android:textSize="@dimen/one_row_items_price_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemName"

        />

</androidx.constraintlayout.widget.ConstraintLayout>