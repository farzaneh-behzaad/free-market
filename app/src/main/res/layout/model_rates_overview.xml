<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/recycler_horizontal_margin"
    android:paddingEnd="@dimen/recycler_horizontal_margin">


    <pro.vteam.freemarket.CostumeTextView
        android:id="@+id/title_ratesOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_recycler_margin"
        android:text="نظرات و امتیازات"
        android:textColor="@color/textColor"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <pro.vteam.freemarket.CostumeTextView
                android:id="@+id/txt_rateAverage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" ۴/۶ "
                android:textColor="@color/darkGray"
                android:textSize="32dp"
                android:textStyle="bold" />

            <pro.vteam.freemarket.CostumeTextView
                android:id="@+id/txt_rateCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="۵۰۰ نظر"
                android:textColor="@color/lightGray"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:columnCount="2"
          />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>