<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/yekan</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>




    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="cornerRadius">24dp</item>
        <item name="rippleColor">#000</item>


    </style>


    <style name="divider" >
        <item name="android:layout_height">0.2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="toolbarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>




